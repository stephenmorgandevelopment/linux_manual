<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:padding="5dp"
    android:background="@color/textBubbles"
    >

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif-monospace"
        android:text="@string/header"
        android:textAllCaps="false"
        android:textColor="@color/textBubblesFont"
        android:textIsSelectable="true"
        android:textSize="@dimen/bubble_header_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autoLink="web"
        android:bufferType="spannable"
        android:fontFamily="monospace"
        android:letterSpacing="0.125"
        android:lineSpacingMultiplier="1.34"
        android:linksClickable="true"
        android:paddingStart="8dp"
        android:paddingTop="2dp"
        android:paddingEnd="8dp"
        android:paddingBottom="2dp"
        android:singleLine="false"
        android:text="@string/text"
        android:textAlignment="viewStart"
        android:textColor="@color/textBubblesFont"
        android:textColorLink="@color/linkColor"
        android:textIsSelectable="true"
        android:textSelectHandleLeft="@color/colorPrimaryDark"
        android:textSelectHandleRight="@color/colorPrimaryDark"
        android:textSize="@dimen/bubble_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText" />

</androidx.constraintlayout.widget.ConstraintLayout>